fun main(){
    var lamaParkir :Int
    var biayaParkir :Float

    //Tarif Parkir
    val tarifSatu = 1.0
    val tarifDua = 0.5
    val tarifTiga = 15

    //Lama Parkir
    lamaParkir = 24

    //Biaya Parkir
    if (lamaParkir >=0 && lamaParkir <=5){
        biayaParkir = (lamaParkir*tarifSatu).toFloat()
    }
    else if (lamaParkir>5 && lamaParkir<=24){
        val lamaParkir2 = lamaParkir-5
        biayaParkir = (lamaParkir2*tarifDua+(5*tarifSatu)).toFloat()
    }
    else if (lamaParkir>24){
        if(lamaParkir%24 == 0){
            val lamaParkir3 = lamaParkir/24
            biayaParkir = (lamaParkir3*tarifTiga).toFloat()
        }
        else {
            val lamaParkir3 = lamaParkir-24
            biayaParkir = (lamaParkir3*tarifDua+(15)).toFloat()
        }
    }
    println("Lama Parkir : $lamaParkir")
    println("Biaya Parkir : $biayaParkir")
}